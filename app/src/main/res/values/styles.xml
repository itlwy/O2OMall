<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--<item name="colorPrimaryDark">@color/gray_bg</item>  &lt;!&ndash;状态栏颜色#ff38ee&ndash;&gt;-->
    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff38ee</item>     <!--tab标签颜色-->

        <item name="android:textColorPrimary">#000000</item>
        <item name="colorAccent">#ff38ee</item>    <!--tab下划线颜色-->
        <item name="android:windowBackground">@color/white</item>    <!--主窗口背景色-->
    </style>

    <style name="CustomTablayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Base.Theme.DesignDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.DesignDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>